{
	"manifest_version": 2,

	"name": "DCrawler",
	"description": "A simple page-scraping extension for Chrome",
	"version": "0.5",
	"author": "DDimitrov",

	"background": {
		"scripts": ["popup.js","jquery-3.1.1.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/",
		"storage"
    ],
	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html"
	}
}